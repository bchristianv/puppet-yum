##### Puppet generated file - template #####

[main]
cachedir=<%= @cachedir %>
keepcache=<%= @keepcache %>
debuglevel=<%= @debuglevel %>
logfile=<%= @logfile %>
exactarch=<%= @exactarch %>
obsoletes=<%= @obsoletes %>
gpgcheck=<%= @gpgcheck %>
plugins=<%= @plugins %>
installonly_limit=<%= @installonly_limit %>
<% if @bugtracker_url -%>bugtracker_url=<%= @bugtracker_url %>
<% end -%>
<% if @distroverpkg -%>distroverpkg=<%= @distroverpkg %>
<% end -%>
<% if @extra_options -%>
<% if @extra_options.has_key?('main') -%>
<% @extra_options['main'].sort.map do |k, v| -%>
<%= k %>=<%= v %>
<% end -%>
<% end -%>
<% @extra_options.sort.map do |k, v| -%>
<% if v.is_a?(Hash) and k == 'main' -%>
<% next -%>
<% else %>
[<%= k %>]
<% v.sort.map do |ki, vi| -%>
<%= ki %>=<%= vi %>
<% end -%>
<% end -%>
<% end -%>
<% end -%>


#  This is the default, if you make this bigger yum won't see if the metadata
# is newer on the remote and so you'll "gain" the bandwidth of not having to
# download the new metadata and "pay" for it by yum not having correct
# information.
#  It is esp. important, to have correct metadata, for distributions like
# Fedora which don't keep old packages around. If you don't like this checking
# interupting your command line usage, it's much better to have something
# manually check the metadata once an hour (yum-updatesd will do this).
